<!DOCTYPE html>
<html>	
	<body>
		<h1>Calculator</h1>
		<form action='' method='post'>
			<div>
			  <label for='a'>First Value:</label>
			  <input id='a' name='a' type='text'/>
			  <label for='b'>Second Value:</label>
			  <input id='b' name='b' type='text'/>
			</div>
			<div class='operators'>
			  <legend>Operator:</legend>
			  <input id='add'
					 name='operator'
					 type='radio'
					 value='add' 
					 checked='checked'/>
			  <label for='add' class='operators'>Add (+)</label></br>
			  <input id='subtract'
					 name='operator'
					 type='radio'
					 value='subtract' />
			  <label for='subtract' class='operators'>Subtract (-)</label></br>
			  <input id='multiply'
					 name='operator'
					 type='radio'
					 value='multiply' />
			  <label for='multiply' class='operators'>Multiply (*)</label></br>
			  <input id='divide'
					 name='operator'
					 type='radio'
					 value='divide'/>
			  <label for='divide' class='operators'>Divide (/)</label>
			</div></br>
			<div>
				<button>Submit</button>
			</div>
		</form>
		@{
			if(IsPost){
				int a = Convert.ToInt32(Request["a"]);
				int b = Convert.ToInt32(Request["b"]);
				string operation = Request["operator"];
				int answer = 0;
				
				switch(operation)
				{
					case "add":
						answer = a + b;
						break;
					case "subtract":
						answer = a - b;
						break;
					case "multiply":
						answer = a * b;
						break;
					case "divide":
						answer = a / b;
						break;
				}
				
				<p>Answer: @answer </p>
			}
		}
	</body>
</html>